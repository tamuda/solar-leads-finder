# Firebase Configuration
FIREBASE_CREDENTIALS_PATH=config/firebase-credentials.json
FIRESTORE_PROJECT_ID=your-project-id

# Geocoding API
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# Alternative: GEOCODIO_API_KEY=your-geocodio-api-key

# OpenStreetMap Overpass API
OVERPASS_API_URL=https://overpass-api.de/api/interpreter

# Data Sources
# County assessor data URLs (example for Monroe County, NY)
ASSESSOR_DATA_URL=https://data.cityofrochester.gov/resource/example.json
ASSESSOR_API_KEY=optional-api-key

# Business data
BUSINESS_DATA_URL=https://data.ny.gov/resource/example.json
BUSINESS_API_KEY=optional-api-key

# Processing Configuration
GEOCODING_BATCH_SIZE=100
GEOCODING_RATE_LIMIT=50  # requests per second
DEDUPLICATION_DISTANCE_THRESHOLD=20  # meters

# Scoring Configuration
MIN_ROOF_AREA=2000  # minimum square feet
MIN_SCORE_THRESHOLD=40  # minimum score to include in output

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/solar_leads.log
